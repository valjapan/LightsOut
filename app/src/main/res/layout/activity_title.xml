<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitleActivity">

    <LinearLayout
        android:id="@+id/modeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="30dp"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                android:textSize="53dp" />

            <Button
                android:id="@+id/PlayEazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:height="75dp"
                android:background="@drawable/button_design_light_blue"
                android:onClick="goEazy"
                android:text="初級"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textSize="35dp" />

            <Button
                android:id="@+id/PlayNomal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:height="75dp"
                android:background="@drawable/button_design_light_green"
                android:onClick="goNomal"
                android:text="中級"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textSize="35dp" />

            <Button
                android:id="@+id/PlayHard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:height="75dp"
                android:background="@drawable/button_deaign_orange"
                android:onClick="goHard"
                android:text="上級"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/googleGame"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="googleGame"
                    android:src="@drawable/trophy"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/EditButton"
                    android:layout_weight="1"
                    android:onClick="goEdit"
                    android:src="@drawable/ic_edit" />

                <!--<android.support.v4.widget.Space-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1" />-->

                <ImageView
                    android:id="@+id/medalButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:onClick="goMedal"
                    android:src="@drawable/googleplay"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rankLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000"
        android:padding="@dimen/activity_vertical_margin"
        android:visibility="invisible">

        <Button
            android:id="@+id/rankEazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:height="75dp"
            android:background="@drawable/button_design_light_blue"
            android:onClick="goEazyRank"
            android:text="初級ランキング"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/rankNomal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rankEazy"
            android:layout_marginTop="16dp"
            android:height="75dp"
            android:background="@drawable/button_design_light_green"
            android:onClick="goNomalRank"
            android:text="中級ランキング"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/rankHard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rankNomal"
            android:layout_marginTop="16dp"
            android:height="75dp"
            android:background="@drawable/button_deaign_orange"
            android:onClick="goHardRank"
            android:text="上級ランキング"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/returnTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rankHard"
            android:layout_marginTop="16dp"
            android:height="75dp"
            android:background="@drawable/button_design_pink"
            android:onClick="goTitle"
            android:text="戻る"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Version"
            android:id="@+id/versionName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/shareTwiter"
            android:src="@drawable/ic_share_twitter"
            android:onClick="shareTwitter"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>
