<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TitleActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:textSize="40dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ルール説明"
                android:id="@+id/Help"
                android:onClick="help"
                android:layout_marginBottom="50dp"
                android:textSize="25dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="初級"
                android:id="@+id/PlayEazy"
                android:onClick="goEazy"
                android:layout_marginBottom="8dp"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中級"
                android:id="@+id/PlayNomal"
                android:layout_gravity="center_horizontal"
                android:onClick="goNomal"
                android:layout_marginBottom="8dp"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上級"
                android:id="@+id/PlayHard"
                android:layout_gravity="center_horizontal"
                android:onClick="goHard"
                android:layout_marginBottom="50dp"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ランキング"
                android:id="@+id/GoRank"
                android:layout_gravity="center_horizontal"
                android:onClick="goRank"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/googleGame"
                android:src="@drawable/trophy"
                android:onClick="googleGame" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000"
        android:id="@+id/rankLayout"
        android:visibility="visible"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初級ランキング"
            android:id="@+id/rankEazy"
            android:layout_marginTop="220dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="goEazyRank" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:text="中級ランキング"
            android:id="@+id/rankNomal"
            android:layout_below="@+id/rankEazy"
            android:layout_alignParentStart="true"
            android:onClick="goNomalRank" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="上級ランキング"
            android:id="@+id/rankHard"
            android:layout_below="@+id/rankNomal"
            android:layout_alignParentStart="true"
            android:onClick="goHardRank" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="戻る"
            android:id="@+id/returnTytle"
            android:layout_below="@+id/rankHard"
            android:layout_alignParentStart="true"
            android:onClick="goTytle" />
    </RelativeLayout>
</RelativeLayout>
