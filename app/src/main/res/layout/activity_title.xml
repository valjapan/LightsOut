<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitleActivity">

    <LinearLayout
        android:id="@+id/modeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="45dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/PlayEazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="goEazy"
                android:text="初級"
                android:textSize="35dp"
                android:height="75dp"
                android:background="@drawable/button_design_light_blue"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/PlayNomal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:onClick="goNomal"
                android:text="中級"
                android:textSize="35dp"
                android:height="75dp"
                android:background="@drawable/button_design_light_green"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/PlayHard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:onClick="goHard"
                android:text="上級"
                android:textSize="35dp"
                android:height="75dp"
                android:background="@drawable/button_deaign_orange"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/googleGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:onClick="googleGame"
                android:src="@drawable/trophy" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rankLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000"
        android:visibility="visible">

        <Button
            android:id="@+id/rankEazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:onClick="goEazyRank"
            android:text="初級ランキング"
            android:height="75dp"
            android:background="@drawable/button_design_light_blue"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/rankNomal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rankEazy"
            android:layout_marginTop="15dp"
            android:onClick="goNomalRank"
            android:text="中級ランキング"
            android:height="75dp"
            android:background="@drawable/button_design_light_green"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/rankHard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rankNomal"
            android:layout_marginTop="16dp"
            android:onClick="goHardRank"
            android:text="上級ランキング"
            android:height="75dp"
            android:background="@drawable/button_deaign_orange"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/returnTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rankHard"
            android:layout_marginTop="25dp"
            android:onClick="goTitle"
            android:text="戻る"
            android:height="75dp"
            android:background="@drawable/button_design_pink"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</RelativeLayout>
