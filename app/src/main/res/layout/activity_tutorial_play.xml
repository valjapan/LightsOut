<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.valkyrie.nabeshimamac.lightsout.activity.TutorialPlayActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialTitle"
            android:textAlignment="center"
            android:textSize="50sp" />

        <TextView
            android:text="実際にやってみよう！！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialContents"
            android:textSize="25sp"
            android:textAlignment="center" />

        <TextView
            android:text="左上からスタートです"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialContents2"
            android:textSize="25sp"
            android:textAlignment="center" />

        <com.valkyrie.nabeshimamac.lightsout.view.TutorialLightsOutView
            android:id="@+id/tutorialLightsOutView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
